{
	"version": 2,
	"buildCommand": "npm run vercel-build",
	"installCommand": "npm ci --no-optional --legacy-peer-deps",
	"builds": [
		{
			"src": "api/index.ts",
			"use": "@vercel/node"
		},
		{
			"src": "package.json",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "dist"
			}
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "/api/index.ts"
		},
		{
			"src": "/(.*)",
			"dest": "/index.html"
		}
	]
}